{
  "info": {
    "name": "Password Manager API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"Str0ngP@ss!\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"]}
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"Str0ngP@ss!\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}
      },
      "response": []
    },
    {
      "name": "Create Credential",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"accountName\": \"GitHub\",\n  \"accountUsername\": \"aliceGH\",\n  \"passwordPlain\": \"supersecret\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/password", "host": ["{{baseUrl}}"], "path": ["password"]}
      }
    },
    {
      "name": "List Credentials",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/password", "host": ["{{baseUrl}}"], "path": ["password"]}
      }
    },
    {
      "name": "Reveal Password",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/password/{{id}}/reveal", "host": ["{{baseUrl}}"], "path": ["password", "{{id}}", "reveal"]}
      }
    },
    {
      "name": "Update Credential",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"passwordPlain\": \"newsecret\"\n}"
        },
        "url": {"raw": "{{baseUrl}}/password/{{id}}", "host": ["{{baseUrl}}"], "path": ["password", "{{id}}"]}
      }
    },
    {
      "name": "Delete Credential",
      "request": {
        "method": "DELETE",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"}
        ],
        "url": {"raw": "{{baseUrl}}/password/{{id}}", "host": ["{{baseUrl}}"], "path": ["password", "{{id}}"]}
      }
    }
  ],
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:4000"},
    {"key": "token", "value": ""}
  ]
}

